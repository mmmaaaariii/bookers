<h2>Books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
 
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td></td>
    </tr>
  <% end %>
</table>


<h2>New book</h2>

<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <p><%= f.submit 'Create Book' %></p>
<% end %>
